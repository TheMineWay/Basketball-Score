rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /game/game {
      allow update, write: if request.auth != null && get(/databases/$(database)/documents/admin/$(request.auth.uid)).data.admin == true;
      allow read: if true;
    }
    match /admin/{uid} {
      allow read: if request.auth.uid == uid;
    }
  }
}